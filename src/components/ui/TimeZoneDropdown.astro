---
const cities = ['Karachi', 'Islamabad', 'Lahore'];
---

<div class="relative group">
  <button class="nav-link flex items-center">
    Time Zone
    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>
  <div class="absolute hidden group-hover:block w-48 bg-white shadow-lg rounded-md mt-2">
    {cities.map(city => (
      <button class="block w-full text-left px-4 py-2 text-gray-700 hover:bg-kalam-light hover:text-kalam-green">
        {city}
      </button>
    ))}
  </div>
</div>