---
interface Props {
  variant?: 'primary' | 'secondary';
  class?: string;
}

const { variant = 'primary', class: className } = Astro.props;

const baseStyles = "px-6 py-2 rounded-full transition duration-300";
const variants = {
  primary: "bg-kalam-green text-white hover:bg-kalam-dark",
  secondary: "bg-white text-kalam-green border border-kalam-green hover:bg-kalam-light"
};
---

<button class:list={[baseStyles, variants[variant], className]}>
  <slot />
</button>