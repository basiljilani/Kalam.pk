---
import Button from '../ui/Button.astro';

const values = [
  { title: 'Authenticity', description: 'Verified Islamic content from trusted scholars' },
  { title: 'Accessibility', description: 'Islamic knowledge available to everyone, everywhere' },
  { title: 'Community', description: 'Building bridges within the global Muslim Ummah' },
  { title: 'Innovation', description: 'Modern technology meeting traditional teachings' }
];
---

<section class="py-20 bg-gradient-to-b from-white to-kalam-light">
  <div class="container mx-auto px-6">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-4xl font-amiri font-bold text-kalam-dark mb-6">About Kalam.pk</h2>
      <p class="text-xl text-gray-700 mb-8">
        We're dedicated to making Islamic knowledge accessible to everyone through innovative digital solutions.
      </p>
      <Button variant="secondary">Learn More About Us</Button>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mt-16">
      {values.map(value => (
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
          <h3 class="text-xl font-bold text-kalam-dark mb-3">{value.title}</h3>
          <p class="text-gray-600">{value.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>