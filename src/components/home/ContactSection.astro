---
import Card from '../ui/Card.astro';
---

<section id="contact" class="py-20 bg-kalam-light">
  <div class="container mx-auto px-6 text-center">
    <h2 class="text-4xl font-amiri font-bold text-kalam-dark mb-8">Get in Touch</h2>
    <Card class="max-w-2xl mx-auto">
      <p class="text-xl text-gray-700 mb-8">
        Have questions or suggestions? We'd love to hear from you!
      </p>
      <a href="mailto:info@kalam.pk" class="text-2xl text-kalam-green hover:text-kalam-dark transition duration-300">
        info@kalam.pk
      </a>
    </Card>
  </div>
</section>