---
import Button from '../ui/Button.astro';
---

<section class="min-h-screen pt-24 flex items-center bg-gradient-to-br from-kalam-light via-white to-kalam-light">
  <div class="container mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="text-left">
        <h1 class="text-5xl md:text-6xl font-amiri font-bold text-kalam-dark mb-6 leading-tight">
          Discover the Beauty of <span class="text-kalam-green">Islamic Knowledge</span>
        </h1>
        <p class="text-xl text-gray-700 mb-8">
          Your digital companion for authentic Islamic teachings, prayer times, and spiritual growth.
        </p>
        <div class="flex gap-4">
          <Button>Get Started</Button>
          <Button variant="secondary">Learn More</Button>
        </div>
      </div>
      <div class="hidden md:block">
        <img 
          src="/images/islamic-pattern.svg" 
          alt="Islamic Pattern" 
          class="w-full max-w-lg mx-auto"
        />
      </div>
    </div>
  </div>
</section>